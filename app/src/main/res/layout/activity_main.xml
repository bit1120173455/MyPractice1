<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.zhaomingyang.mypractice1.MainActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:text="基本信息调查"
                android:textColor="#000000"
                android:textSize="30dp"
                android:layout_marginLeft="10dp"/>
        </RelativeLayout>

        <ImageView
            android:id="@+id/imageView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:srcCompat="@mipmap/ic_launcher_round" />

        <EditText
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:hint="输入你的姓名"
            android:layout_marginLeft="10dp"/>
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <RadioGroup
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginLeft="10dp">

                <RadioButton
                    android:id="@+id/radiobutton_man"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:checked="true"
                    android:text="man" />

                <RadioButton
                    android:id="@+id/radiobutton_woman"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="woman"
                    android:layout_marginLeft="20dp"/>
            </RadioGroup>
        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="满意的话请扣一下"
                android:textSize="17dp"
                android:textColor="#000000"/>

            <Switch
                android:id="@+id/switch1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Switch" />
        </LinearLayout>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="游戏和女朋友哪个重要？"
            android:textSize="18dp"
            android:textColor="#000000"/>
        <CheckBox
            android:id="@+id/checkBox_game"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="游戏"
            android:textSize="18dp"
            android:textColor="#000000"/>
        <CheckBox
            android:id="@+id/checkBox_girl"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="女朋友"
            android:textSize="18dp"
            android:textColor="#000000"/>
        <Button
            android:id="@+id/button1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="提交"
            android:textSize="20dp"
            tools:layout_editor_absoluteX="7dp"
            tools:layout_editor_absoluteY="62dp" />



    </LinearLayout>


</android.support.constraint.ConstraintLayout>
